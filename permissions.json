{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3Admin",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:PutBucket*",
        "s3:DeleteBucket",
        "s3:ListBucket",
        "s3:*Object*"
      ],
      "Resource": "arn:aws:s3:::*"
    },
    {
      "Sid": "LambdaAdmin",
      "Effect": "Allow",
      "Action": "lambda:*",
      "Resource": "*"
    },
    {
      "Sid": "IAMPassAndCreate",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:PutRolePolicy",
        "iam:AttachRolePolicy",
        "iam:PassRole"
      ],
      "Resource": "arn:aws:iam::767397779454:role/*"
    },
    {
      "Sid": "SNSCreatePublish",
      "Effect": "Allow",
      "Action": [
        "sns:CreateTopic",
        "sns:Subscribe",
        "sns:Publish",
        "sns:GetTopicAttributes",
        "sns:SetTopicAttributes"
      ],
      "Resource": "arn:aws:sns:us-east-1:767397779454:*"
    },
    {
      "Sid": "BackendState",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "dynamodb:*"
      ],
      "Resource": "*"
    }
  ]
}
